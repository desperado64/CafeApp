</div>

<script>

    var dollarUs = Intl.NumberFormat("en-US", {
        style: "currency",
        currency: "USD",
    });



    $("h3.cost").ready(function () {
        let data = $("h3.cost").attr("data");
        $("span#spanUsd").text(dollarUs.format(data.replace(",", ".")));
    });

</script>

