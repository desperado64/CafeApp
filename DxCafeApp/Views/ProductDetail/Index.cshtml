    <div class="row">
        <div class="col-md-12 product_content">
            <h4>Currencies:</h4>
            @foreach (var item in @Model.Currencies)
            {
                <div class="row">
                    <div class="col-3 col-md-3 border border-light">
                        @item.Key
                    </div>
                    <div class="col-3 col-md-9 border border-light">
                        @item.Value
                    </div>
                </div>
            }

        </div>
